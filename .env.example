# ============================================
# Investory 환경변수 템플릿
# 이 파일을 복사하여 .env.local (개발) 또는 .env.production (프로덕션) 생성
# ============================================

# --- Auth.js (Google OIDC) ---
AUTH_SECRET=                          # npx auth secret 으로 생성
AUTH_URL=https://example.com          # 프로덕션 공개 URL (리버스 프록시 뒤에서 필수)
AUTH_TRUST_HOST=true                  # 리버스 프록시(Caddy) 뒤에서 호스트 신뢰
AUTH_GOOGLE_ID=                       # Google Cloud Console OAuth Client ID
AUTH_GOOGLE_SECRET=                   # Google Cloud Console OAuth Client Secret
ADMIN_EMAIL=                          # 관리자 Google 이메일 (X/Threads 공유 권한)

# --- 외부 API ---
FINNHUB_API_KEY=                      # Finnhub 실시간 시세 API
ALPHA_VANTAGE_API_KEY=                # Alpha Vantage 재무 데이터 API

# --- Redis 캐시 ---
REDIS_URL=                            # Redis 접속 URL (예: redis://localhost:6379)
REDIS_PASSWORD=                       # Redis 비밀번호 (선택)

# --- 공개 변수 (클라이언트 번들에 포함) ---
NEXT_PUBLIC_BASE_URL=https://example.com
NEXT_PUBLIC_KAKAO_JS_KEY=             # Kakao JavaScript SDK 앱 키 (카카오톡 공유)

# Neon PostgreSQL
DATABASE_URL=
